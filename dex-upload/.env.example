# Flask Configuration
SECRET_KEY=your-super-secret-key-here-change-this
FLASK_ENV=production
PORT=5001

# Database Configuration (Railway provides this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# CORS Configuration
CORS_ORIGINS=https://snipswapui.vercel.app,https://snipswap.com

# Secret Network Configuration
SECRET_NETWORK_RPC=https://rpc.secret.express
SECRET_NETWORK_CHAIN_ID=secret-4
SECRET_NETWORK_LCD=https://lcd.secret.express

# Trading Configuration
DEFAULT_SLIPPAGE=0.5
MAX_SLIPPAGE=10.0
MIN_ORDER_SIZE=0.01

# Privacy Configuration
ENABLE_PRIVACY_MODE=true
PRIVACY_SESSION_TIMEOUT=3600

# AI Configuration
ENABLE_AI_AGENTS=true
AI_AGENT_ENDPOINT=https://ai.snipswap.com

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=INFO

