# ðŸš€ SnipSwap DEX - Sovereignty Stack Configuration
# Your human-AI collaboration creates wealth you capture

# ===== CORE FLASK CONFIGURATION =====
SECRET_KEY=your-super-secret-key-here-change-this-to-32-random-chars
FLASK_ENV=production
PORT=5001
DEBUG=false

# ===== DATABASE CONFIGURATION =====
# Railway provides this automatically for PostgreSQL
DATABASE_URL=postgresql://user:password@host:port/database

# Redis for caching and sessions (optional but recommended)
REDIS_URL=redis://localhost:6379/0

# ===== SECURITY & CORS =====
CORS_ORIGINS=https://snipswapui.vercel.app,https://snipswap.com,https://app.snipswap.com

# ===== AI INTEGRATION =====
# OpenAI for advanced AI features
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1

# Anthropic for Claude integration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Local AI models (optional)
LOCAL_AI_ENDPOINT=http://localhost:8080
ENABLE_LOCAL_AI=false

# ===== BLOCKCHAIN INTEGRATIONS =====

# Secret Network (Privacy Layer)
SECRET_NETWORK_RPC=https://rpc.secret.express
SECRET_NETWORK_CHAIN_ID=secret-4
SECRET_NETWORK_LCD=https://lcd.secret.express
SECRET_NETWORK_GRPC=https://grpc.secret.express

# Ethereum Mainnet
ETHEREUM_RPC=https://eth-mainnet.alchemyapi.io/v2/your-api-key
ETHEREUM_CHAIN_ID=1

# Polygon
POLYGON_RPC=https://polygon-rpc.com
POLYGON_CHAIN_ID=137

# Arbitrum
ARBITRUM_RPC=https://arb1.arbitrum.io/rpc
ARBITRUM_CHAIN_ID=42161

# ===== SOVEREIGNTY STACK INTEGRATIONS =====

# Akash Network (Sovereign Compute)
AKASH_ENABLED=true
AKASH_RPC=https://rpc.akash.forbole.com:443
AKASH_API_ENDPOINT=https://api.akash.network

# Sentinel DVPN (Private Networking)
SENTINEL_ENABLED=true
SENTINEL_RPC=https://rpc.sentinel.co:443
SENTINEL_API_ENDPOINT=https://api.sentinel.co

# Jackal Protocol (Encrypted Storage)
JACKAL_ENABLED=true
JACKAL_RPC=https://rpc.jackalprotocol.com:443
JACKAL_STORAGE_ENDPOINT=https://storage.jackalprotocol.com

# IPFS (Permanent Storage)
IPFS_ENABLED=true
IPFS_GATEWAY=https://gateway.pinata.cloud
IPFS_API_ENDPOINT=https://api.pinata.cloud
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key

# ===== TRADING CONFIGURATION =====
DEFAULT_SLIPPAGE=0.5
MAX_SLIPPAGE=10.0
MIN_ORDER_SIZE=0.01
MAX_ORDER_SIZE=1000000
TRADING_FEE_RATE=0.0015

# Order book settings
MAX_ORDERS_PER_USER=100
ORDER_EXPIRY_SECONDS=3600

# ===== PRIVACY & SECURITY =====
ENABLE_PRIVACY_MODE=true
PRIVACY_SESSION_TIMEOUT=3600
ENABLE_ZERO_KNOWLEDGE=true

# MEV Protection
ENABLE_MEV_PROTECTION=true
MEV_PROTECTION_DELAY=12

# Rate limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# ===== MONITORING & ANALYTICS =====

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Prometheus metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_STRUCTURED_LOGGING=true

# ===== PERFORMANCE OPTIMIZATION =====

# Database connection pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis caching
CACHE_TTL=300
ENABLE_QUERY_CACHE=true

# WebSocket configuration
WS_PING_INTERVAL=25
WS_PING_TIMEOUT=60
WS_MAX_CONNECTIONS=10000

# ===== AI TRADING FEATURES =====

# AI Trading Bots
ENABLE_AI_TRADING=true
AI_TRADING_MAX_POSITION=10000
AI_RISK_TOLERANCE=0.02

# Market Analysis
ENABLE_MARKET_ANALYSIS=true
ANALYSIS_UPDATE_INTERVAL=60

# Natural Language Trading
ENABLE_NL_TRADING=true
NL_CONFIDENCE_THRESHOLD=0.8

# ===== ADVANCED FEATURES =====

# Flash Loans
ENABLE_FLASH_LOANS=true
FLASH_LOAN_FEE=0.0009

# Yield Farming
ENABLE_YIELD_FARMING=true
YIELD_UPDATE_INTERVAL=300

# Governance
ENABLE_GOVERNANCE=true
GOVERNANCE_TOKEN_ADDRESS=0x...

# Cross-chain bridges
ENABLE_CROSS_CHAIN=true
BRIDGE_TIMEOUT=1800

# ===== DEVELOPMENT & TESTING =====

# Testing configuration
TESTING=false
TEST_DATABASE_URL=sqlite:///test.db

# Development features
ENABLE_DEBUG_ROUTES=false
ENABLE_MOCK_DATA=false

# API Documentation
ENABLE_SWAGGER=true
API_DOCS_PATH=/api/docs

# ===== COMPLIANCE & REGULATORY =====

# KYC/AML (if required)
ENABLE_KYC=false
KYC_PROVIDER=jumio
KYC_API_KEY=your-kyc-api-key

# Geographic restrictions
RESTRICTED_COUNTRIES=US,CN,KP
ENABLE_GEO_BLOCKING=false

# ===== BACKUP & DISASTER RECOVERY =====

# Database backups
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30

# S3 backup storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=snipswap-backups
AWS_REGION=us-east-1

